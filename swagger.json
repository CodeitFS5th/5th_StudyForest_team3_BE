{
  "swagger": "2.0",
  "info": {
    "title": "5th FS 3팀",
    "description": "공부의 숲 API 문서입니다",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "servers": [
    {
      "url": "https://5th-study-forest-team3-pvs89drgd-min-jiyeongs-projects.vercel.app/"
    }
  ],
  "basePath": "/",
  "schemes": ["http"],
  "securityDefinitions": {
    "bearerAuth": {
      "type": "http",
      "scheme": "bearer",
      "in": "header",
      "bearerFormat": "JWT"
    }
  },
  "paths": {
    "/api/study": {
      "get": {
        "summary": "Get all studies",
        "responses": {
          "200": {
            "description": "List of studies"
          }
        }
      },
      "post": {
        "summary": "Create a study",
        "responses": {
          "201": {
            "description": "Study created"
          }
        }
      }
    },
    "/api/study/{id}": {
      "get": {
        "summary": "Get a study by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Study details"
          }
        }
      },
      "delete": {
        "summary": "Delete a study by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Study deleted"
          }
        }
      },
      "patch": {
        "summary": "Update a study by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Study updated"
          }
        }
      }
    },
    "/api/habit": {
      "get": {
        "summary": "Get all habits",
        "responses": {
          "200": {
            "description": "List of habits"
          }
        }
      },
      "post": {
        "summary": "Create a habit",
        "responses": {
          "201": {
            "description": "Habit created"
          }
        }
      }
    },
    "/api/habit/{id}": {
      "delete": {
        "summary": "Delete a habit by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Habit deleted"
          }
        }
      },
      "patch": {
        "summary": "Update a habit by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Habit updated"
          }
        }
      }
    },
    "/api/study/focus": {
      "post": {
        "summary": "Set study focus",
        "responses": {
          "200": {
            "description": "Focus set"
          }
        }
      }
    },
    "/api/reaction": {
      "post": {
        "summary": "Add a reaction",
        "responses": {
          "201": {
            "description": "Reaction added"
          }
        }
      }
    }
  }
}
