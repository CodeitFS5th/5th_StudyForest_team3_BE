enum ImageType {
  GREEN
  YELLOW
  BLUE
  RED
  PHOTO_1
  PHOTO_2
  PHOTO_3
}

model Study {
  id          Int              @id @default(autoincrement())
  nick        String
  name        String
  description String
  password    String
  background  ImageType
  point       Int              @default(0)
  created_at  DateTime         @default(now())
  updated_at  DateTime         @updatedAt
  deleted_at  DateTime?
  habits      Habit[]
  reactions   Reaction[]
  delete_logs StudyDeleteLog[]

  @@index([deleted_at])
}

model StudyDeleteLog {
  id         Int      @id @default(autoincrement())
  study_id   Int
  deleted_at DateTime @default(now()) // 삭제 시간
  reason     String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  study Study @relation(fields: [study_id], references: [id])
}
